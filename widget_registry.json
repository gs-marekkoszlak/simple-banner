{
  "widgets": [
    {
      "title": "Demo widget",
      "description": "Demo widget for presentation purposes",
      "version": "1.0.0",
      "category": "Demo",
      "type": "demo_widget",
      "imageName": "demo_widget",
      "content": {
        "endpoint": "./widgets/demo_widget/content.html",
        "method": "GET",
        "requiresAuthentication": false,
        "cacheStrategy": "no-cache"
      },
      "containers": [
        "Full width"
      ],
      "widgetsLibrary": true,
      "settings": {
        "configurable": true,
        "editable": true,
        "removable": true,
        "shared": false,
        "movable": false
      }
    },
    {
      "title": "Horizontal Banner",
      "description": "A minimalistic horizontal banner with title, description, and call-to-action button",
      "version": "1.0.0",
      "category": "Banner",
      "type": "horizontal_banner",
      "imageName": "horizontal_banner",
      "content": {
        "endpoint": "./widgets/horizontal_banner/content.html",
        "method": "GET",
        "requiresAuthentication": false,
        "cacheStrategy": "no-cache"
      },
      "containers": [
        "Full width"
      ],
      "widgetsLibrary": true,
      "settings": {
        "configurable": true,
        "editable": true,
        "removable": true,
        "shared": false,
        "movable": false
      },
      "configuration": {
        "properties": [
          {
            "name": "banner_title",
            "type": "text",
            "label": "Title",
            "defaultValue": "Welcome to Our Platform",
            "rules": {
              "required": true
            }
          },
          {
            "name": "banner_description",
            "type": "text",
            "label": "Description",
            "defaultValue": "Discover amazing features and start your journey today. Join thousands of satisfied users.",
            "rules": {
              "required": true
            }
          },
          {
            "name": "cta_text",
            "type": "text",
            "label": "CTA Button Text",
            "defaultValue": "Get Started",
            "rules": {
              "required": true
            }
          },
          {
            "name": "cta_url",
            "type": "text",
            "label": "CTA Button URL",
            "defaultValue": "#",
            "rules": {
              "required": true
            }
          },
          {
            "name": "background_color_start",
            "type": "color",
            "label": "Background Gradient Start Color",
            "defaultValue": "#667eea",
            "rules": {
              "required": true
            }
          },
          {
            "name": "background_color_end",
            "type": "color",
            "label": "Background Gradient End Color",
            "defaultValue": "#764ba2",
            "rules": {
              "required": true
            }
          },
          {
            "name": "text_color",
            "type": "color",
            "label": "Text Color",
            "defaultValue": "#ffffff",
            "rules": {
              "required": true
            }
          },
          {
            "name": "button_bg_color",
            "type": "color",
            "label": "Button Background Color",
            "defaultValue": "#ffffff",
            "rules": {
              "required": true
            }
          },
          {
            "name": "button_text_color",
            "type": "color",
            "label": "Button Text Color",
            "defaultValue": "#667eea",
            "rules": {
              "required": true
            }
          }
        ]
      },
      "defaultConfig": {
        "banner_title": "Welcome to Our Platform",
        "banner_description": "Discover amazing features and start your journey today. Join thousands of satisfied users.",
        "cta_text": "Get Started",
        "cta_url": "#",
        "background_color_start": "#667eea",
        "background_color_end": "#764ba2",
        "text_color": "#ffffff",
        "button_bg_color": "#ffffff",
        "button_text_color": "#667eea"
      }
    },
    {
      "title": "Hello World Widget",
      "description": "A simple React widget displaying Hello World with custom styling",
      "version": "1.0.0",
      "category": "Demo",
      "type": "react_hello_world",
      "imageName": "react_hello_world",
      "content": {
        "endpoint": "./widgets/react_hello_world/content.html",
        "method": "GET",
        "requiresAuthentication": false,
        "cacheStrategy": "no-cache"
      },
      "containers": [
        "Full width"
      ],
      "widgetsLibrary": true,
      "settings": {
        "configurable": true,
        "editable": true,
        "removable": true,
        "shared": false,
        "movable": false
      }
    }
  ]
}
